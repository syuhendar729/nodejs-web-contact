<%- include('templates/header') %>
<%- include('templates/navbar') %>
<div class="container mt-4">
	<div class="row">
		<div class="col-md-6">
			<% if(!messages) { %>
				<div class="divkosong"></div>
			<% } else { %>
				<div class="alert alert-danger" role="alert">
					<ul>
					<% messages.errors.forEach(err => { %>
						<li><%= err.msg %></li>
					<% }) %>
					</ul>
				</div>
			<% } %>

			<h2>Form Tambah Data Contact</h2>

			<form method="post" action="/contact/add">
			  <div class="mb-3">
				<label for="nama" class="form-label">Name</label>
				<input type="text" class="form-control" id="nama" name="nama" required>
			  </div>
			  <div class="mb-3">
			  <div class="mb-3">
				<label for="kelas" class="form-label">Grade</label>
				<input type="text" class="form-control" id="kelas" name="kelas" required>
			  </div>
				<label for="email" class="form-label">Email</label>
				<input type="email" class="form-control" id="email" name="email" required>
			  </div>
			  <div class="mb-3">
				<label for="notelp" class="form-label">Phone number</label>
				<input type="text" class="form-control" id="notelp" name="notelp" required>
			  </div>
			  <button type="submit" class="btn btn-primary">Add</button>
			</form>

		</div>
	</div>
</div>
<%- include('templates/footer') %>
